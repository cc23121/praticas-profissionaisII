generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

model PrismaCategory {
  idCategory Int       @id @default(autoincrement())
  name       String    @unique @db.VarChar(50)
  products   PrismaProduct[] // Correção do nome do campo inverso
  created_at DateTime  @default(now())
}

model PrismaProduct {
  idProduct   Int            @id @default(autoincrement())
  name        String         @unique @db.VarChar(50)
  price       Float
  Category    PrismaCategory @relation(fields: [categoryId], references: [idCategory], onDelete: Cascade, onUpdate: Cascade)
  categoryId   Int
  created_at  DateTime       @default(now())
}
